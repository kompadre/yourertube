localhost {    
    handle_path /repo/* {
        rewrite /* /index.php?{query}
        php_fastcgi /index.php video_repository:9000 {
            root /app
        }
    }

    handle_path /auth/* {
        rewrite /* /index.php?{query} 
        php_fastcgi /index.php auth:9000 {
            root /app
        }
    }

    handle /app* {
        reverse_proxy /app* front:5173
    }


    handle /* {
        root * /srv
        file_server
    }
}